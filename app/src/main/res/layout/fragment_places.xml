<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.PlacesFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/placesListRecycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <TextView
        android:id="@+id/noPlacesAddedYetTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/noPlacesAddedTextSize"
        android:text="@string/noPlacesAddedYet"
        android:gravity="center"
        android:visibility="visible"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addPlacesFloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/marginFloatingActionButton"
        android:src="@drawable/ic_action_add_24dp" />


</FrameLayout>