<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/place_circular_image_size"
    android:layout_height="@dimen/place_circular_image_size"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/circular_image_view">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/place_circular_image_size"
        android:layout_height="@dimen/place_circular_image_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:cardCornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:background="@drawable/circular_image_view"
            android:id="@+id/selectedImageOfPlaceImageView"
            android:layout_width="@dimen/place_circular_image_size"
            android:layout_height="@dimen/place_circular_image_size"
            android:contentDescription="@string/imageOfPlace"
            android:src="@mipmap/ic_launcher_round"
            android:scaleType="centerCrop"
            />




    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>