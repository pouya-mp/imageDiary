<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/place_cv_main_marginStartEnd"
            android:layout_marginEnd="@dimen/place_cv_main_marginStartEnd"
            android:background="@color/white_color"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="@dimen/place_cv_corner_radius"
            app:cardElevation="@dimen/place_cv_elevation"
            app:cardUseCompatPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/places_content_padding">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/selectedImageOfPlaceImageView"
                    android:layout_width="@dimen/place_circular_image_size"
                    android:layout_height="@dimen/place_circular_image_size"
                    android:contentDescription="@string/imageOfPlace"
                    android:src="@mipmap/ic_launcher_round"
                    app:civ_border_color="@color/circular_image_border_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/place_ll_marginStart"
                    android:layout_marginEnd="@dimen/place_ll_marginEnd"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/placeTitleTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text_color"
                        android:textSize="@dimen/place_title_textSize"
                        android:textStyle="bold"
                        tools:text="Name" />

                    <TextView
                        android:id="@+id/placeDescriptionTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/place_description_text_color"
                        android:textSize="@dimen/place_description_textSize"
                        tools:text="Description" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
